{% set navigation = collections.root | eleventyNavigation %}
{% set years = collections.years | eleventyNavigation %}

<input type="checkbox" title="Dark mode switch" id="darkmode-switch" class="darkmode-input" />

<input type="checkbox" title="Menu trigger" id="nav-trigger" class="nav-trigger" />
<label for="nav-trigger">
    <i></i>
    <i></i>
    <i></i>
    Menu
</label>


<aside id="nav">
    <a href="/" {% if '/' == page.url %} class="active"{% endif %}>Home</a>

    <span class="devider"></span>

    {%- for entry in years %}
        <a href="{{ entry.url }}" {% if entry.url == page.url %} class="active"{% endif %}>{{ entry.title }}</a>
    {%- endfor %}

    <span class="devider"></span>

    {%- for entry in navigation %}
        <a href="{{ entry.url }}" {% if entry.url == page.url %} class="active"{% endif %}>{{ entry.title }}</a>
    {%- endfor %}

    <label for="darkmode-switch" class="darkmode-label">
        <svg xmlns="http://www.w3.org/2000/svg" width="100" height="100" viewBox="0 0 100 100">
            <g class="outer">
                <circle cx="50" cy="50" r="50" />
            </g>
            <g class="inner">
                <circle cx="50" cy="50" r="42" />
            </g>
        </svg>
    </label>
</aside>