title: All about myself
tags:
layout: base
---

{% set images = gallery.images | byYear(2022) %}
<section id="river">
    {%- for image in images -%}
    <article id="{{ image.name | trimExtension | slugify }}"
        style="--width:{{ image.size.width }}; --height:{{ image.size.height }}; --placeholder:{%placeholder image.src%}">
        <a href="#{{ image.name | trimExtension | slugify }}">
            {% picture image.src, image.description, "30rem, 30rem" %}
            <details open>
                <summary>{{ image.description }}</summary>
                <p>
                    {{ image.photo.focalLength }}mm {{ image.photo.exposureNumerator }}/{{ image.photo.exposureDenominator }} F{{ image.photo.fNumber.toFixed(1) }} ISO {{ image.photo.iso }}
                </p>
            </details>
        </a>
        
        <figure>
            {% if not loop.first %}
                <a href="#{{images[loop.index0-1].name | trimExtension | slugify }}" title="previous">&lt;</a>
            {% endif %}
            <a href="#!" title="close">close</a>
            <div>
                {% picturezoom image.src, image.description, "100vw, 100vh" %}
            </div>
            {% if not loop.last %}
                <a href="#{{images[loop.index0+1].name | trimExtension | slugify }}" title="next">&gt;</a>
            {% endif %}
        </figure>        
        
    </article>
    {%- endfor -%}
</section>
